<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AvaluoCaracteristicas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/flecha_atras"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:contentDescription="Regresar" />

        <!-- Logo circular -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/whale"
                android:background="@drawable/circulo_fondo"
                android:padding="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- Título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iconLugar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sala"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="Características del inmueble"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
        </LinearLayout>

        <ListView
            android:id="@+id/listaCaracteristicas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />


    </LinearLayout>

    <include
        android:id="@+id/caracteristicas_nav_bar"
        layout="@layout/caracteristicas_nav_bar" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000000" />


</LinearLayout>

