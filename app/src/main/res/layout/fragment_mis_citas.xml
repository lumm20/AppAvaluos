<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Título "Mis citas" -->
    <TextView
        android:id="@+id/txtMisCitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis citas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Sección "Avalúo para crédito" -->
    <TextView
        android:id="@+id/txtAvaluoCredito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avalúo para crédito"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp" />

    <!-- Día -->
    <TextView
        android:id="@+id/txtDiaLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Día"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txtDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XXXXXXXXXX"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Empresa -->
    <TextView
        android:id="@+id/txtEmpresaLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empresa"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txtEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XXXXXXXXXX"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Trámite -->
    <TextView
        android:id="@+id/txtTramiteLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trámite"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txtTramite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XXXXXXXXXX"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Botón Cancelar -->
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:text="Cancelar"
        android:textColor="@color/white"
        android:backgroundTint="#FF4081" />

</LinearLayout>