<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewC"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtFolioCita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AV20250401123"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp"/>


        <TextView
            android:id="@+id/txtFechaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha Registro: 01/04/2025"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/txtFechaVisita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha Visita: 01/04/2025"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_hint"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/txtEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dressrosa"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:drawableStart="@drawable/ic_empresa"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"/>



    </LinearLayout>
</androidx.cardview.widget.CardView>