<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgendarCitasFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Logo circular -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/whale"
                android:background="@drawable/circulo_fondo"
                android:padding="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="¡Agenda tu visita!"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/calendario"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>

            <!-- Campos del formulario -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Información personal"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/nombre_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:hint="Nombre / Empresa"
                android:inputType="text"
                android:padding="15dp"
                android:textColorHint="#757575"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:text="Información detallada"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/correo_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColorHint="#757575"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/telefono_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:hint="Número de contacto"
                android:inputType="phone"
                android:padding="15dp"
                android:textColorHint="#757575"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/direccion_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:hint="Dirección"
                android:inputType="textPostalAddress"
                android:padding="15dp"
                android:textColorHint="#757575"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:text="Día preferido para la visita"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/fecha_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:hint="DD/MM/AAAA"
                android:inputType="date"
                android:padding="15dp"
                android:textColorHint="#757575"
                android:textSize="18sp"  />

            <!-- Botón Siguiente -->
            <Button
                android:id="@+id/siguiente_btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/round_button"
                android:text="Siguiente"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>